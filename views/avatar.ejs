<div class="mx-40 my-20 avatar-body">
    <div>
        <img src="/images/upload/<%= user.avatar %>" alt="avatar" class="avatar-size" id="img-avatar">
    </div>
    <div>
        <form action="//127.0.0.1:5000/user/avatar" method="POST" enctype="multipart/form-data">
            <input name="avatar" type="file" class="custom-file-input" id="inp-avatar">
            <input type="submit" id="btn-avatar" class="btn btn-secondary mt-10" value="save">
        </form>
    </div>
</div>