<div class="m-5 p-3 md:mt-0 md:col-span-2">
    <form>
        <div class="shadow overflow-hidden sm:rounded-md" style="border-radius: 8px;">
            <div class="px-4 py-5 bg-white sm:p-6">
                <div class="grid grid-cols-6 gap-14">
                    <div class="col-span-6 sm:col-span-3">
                        <label for="name" class="block text-sm font-medium text-gray-700">Name</label>
                        <input type="text" name="name" id="name" value="<%= user.name %>" class="bg-gray-200 mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md input-sm">
                    </div>
                    <div class="col-span-6 sm:col-span-3">
                        <label for="username" class="block text-sm font-medium text-gray-700">User name</label>
                        <input type="text" name="username" id="username" value="<%= user.username %>" placeholder="<%= user.username %>" class="bg-gray-200 mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md input-sm">
                    </div>
                    <div class="col-span-6 sm:col-span-2 ">
                        <label for="age" class="block text-sm font-medium text-gray-700">Age</label>
                        <input type="number" name="age" id="age" value="<%= user.age %>" class="bg-gray-200 mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md input-sm">
                    </div>
                    <div class="col-span-6 sm:col-span-2 ">
                        <label for="phoneNumber" class="block text-sm font-medium text-gray-700">Phone number</label>
                        <input type="tel" name="phoneNumber" id="phoneNumber" value="<%= user.phoneNumber %>" class="bg-gray-200 mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md input-sm">
                    </div>
                    <div class="col-span-6 sm:col-span-2 ">
                        <label for="gender" class="block text-sm font-medium text-gray-700">Gender</label>
                        <input type="tel" name="gender" id="gender" value="<%= user.gender %>" class="bg-gray-200 mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md input-sm">
                    </div>
                    <div class="col-span-6 sm:col-span-6 ">
                        <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
                        <input type="email" name="email" id="email" value="<%= user.email %>" class="bg-gray-200 mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md input-sm">
                    </div>
                </div>
            </div>
            <div class="px-4 py-3 bg-gray-50 text-right sm:px-6 ">
                <button type="button" id="btn-update" class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    update
                </button>
            </div>
        </div>
    </form>
</div>